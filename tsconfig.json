{
  "compilerOptions": {
    "declaration": true,
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "preserveConstEnums": true,
    "esModuleInterop": true,
    "module": "CommonJS",
    "target": "esnext",
    "skipLibCheck": true,
    "strict": false,
    "jsx": "react",
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node"
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*"]
}